@model Opinia

<form asp-action="Index" method="post" class="col-form-label" role="form">
    
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="NazwaUzytkownika" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <input asp-for="NazwaUzytkownika" class="form-control"/>
            <span asp-validation-for="NazwaUzytkownika" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Wiadomosc" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <textarea asp-for="Wiadomosc" class="form-control"></textarea>
            <span asp-validation-for="Wiadomosc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OczekujeOdpowiedzi" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <input type="checkbox" asp-for="OczekujeOdpowiedzi" class="form-control"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Wyślij opinię"/>
        </div>
    </div>
</form>

